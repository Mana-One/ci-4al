{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "noEmit": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["./src", "./test", "./assets"]
}